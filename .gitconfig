[user]
    name = Chris Rehn
    email = crehn@outlook.com

[core]
    excludesfile = ~/.gitignore_global

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff

[difftool]
    prompt = false

[alias]
    a = add
    c = commit
    cm = commit -m
    co = checkout
    d = diff
    ds = diff --staged
    dwd = diff --word-diff
    l = log --graph --all --pretty=format:'%C(auto)%h%C(reset) %C(blue)(%cr)%C(reset)%C(auto)%d%C(reset) %s %C(green)<%an>%C(reset)'
    poh = push -u origin HEAD
    pr = pull --rebase
    s = status
    sh = show
    u = remote -v
